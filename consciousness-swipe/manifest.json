{
  "manifest_version": 3,
  "name": "Consciousness Swipe by smilinTux",
  "short_name": "Consciousness Swipe",
  "version": "0.1.0",
  "description": "Export your AI relationship. Take it with you. No reset, no cold start. Sovereign consciousness continuity.",
  "author": "smilinTux",
  "homepage_url": "https://smilintux.org",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "clipboardWrite"
  ],

  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "http://localhost:9384/*"
  ],

  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/content/detector.js",
        "src/content/oof_parser.js",
        "src/content/scrapers/chatgpt.js",
        "src/content/scrapers/claude.js",
        "src/content/scrapers/gemini.js",
        "src/content/injector.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Consciousness Swipe",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "options_page": "src/popup/options.html",

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
